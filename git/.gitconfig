[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	lg = log --graph --decorate --pretty=\"%C(auto) %h %ai %d %s\"
	ls = ls-files
	st = status
	branches = branch -a
	tags = tag -l
	remotes = remote -v
	stashes = stash list
	amend = commit --amend
[color]
	ui = auto
[core]
	editor = vim
	trustctime = false
[credential]
	helper = osxkeychain
[push]
	default = simple
